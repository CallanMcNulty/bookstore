{{#if updateBook}}
<hr>
  <form>
    <label>Title</label>
    {{input value=book.title id="title"}}
    <label>Author</label>
    {{input value=book.author id="author"}}
    <label>Price</label>
    ${{input value=book.price id="price"}}
    <label>Image</label>
    {{input value=book.picture id="picture"}}
    <br>
    <label>Description</label>
    <br>

    {{textarea value=book.description id="description"}}
    <br>
    <button class="btn btn-primary"{{action 'updateBook' book}}>make changes</button>
    <button class="btn btn-danger"{{action 'deleteBook' book}}>delete book</button>
  </form>
<hr>
{{else}}
  <button class="btn btn-default" {{action 'reviseBook'}}>Change Book Details</button>
{{/if}}
