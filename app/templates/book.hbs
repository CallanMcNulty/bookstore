<div class="jumbotron">
  <div class="container">
    <h1>{{model.title}}</h1>
    <h2>by {{model.author}} </h2>
    <h3>${{model.price}}</h3>
  </div>
</div>
<div class="container">
<button class="btn btn-large btn-primary"{{action 'addToCart' model}}>add to cart</button>
<hr>
<div class="row">
  <div class="col-sm-6">
    {{model.description}}
  </div>
  <div class="col-sm-6">
   <img src="{{model.picture}}" alt="a picture of a book" />
  </div>
</div>
<hr>
{{review-component save='save' book=model deleteReview="deleteReview"}}
<br>
{{update-book deleteBook='deleteBook' book=model}}
</div>
